<div class="container d-flex align-items-center justify-content-center">
  <div class="">
    <div class="shadow-lg p-3 mb-3 bg-body-tertiary rounded">
      <div class="d-flex justify-content-between mt-2 mb-2">
        <h1>Come Across</h1>
        <%= link_to "Add New Location", new_location_path, class: "btn btn-primary ms-4 d-inline-flex align-items-center" %>
      </div>
    </div>

    <% if @locations.size == 0 %>
      <br/>
      <div class="container d-flex align-items-center justify-content-center">
        <div class="alert alert-primary" role="alert">
          Sorry, not sure if this is what you expected, locations have not been added yet!
        </div>
      </div>
    <% end %>

    <% if @locations.size %>
      <div class="card">
        <div class="card-body">
          <div id="locations">
            <% @locations.each do |location| %>
              <%= render location %>
              <p><br>
                <%= link_to "View Location Details", location_path(location), class: "btn btn-primary" %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="d-flex justify-content-between mt-2">
      <%= link_to_prev_page @locations, 'Previous', class: "btn btn-primary" %>
      <%= link_to_next_page @locations, 'Next', class: "btn btn-primary" %>
    </div>
  </div>
</div>
