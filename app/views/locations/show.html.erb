<div class="container d-flex align-items-center justify-content-center">
  <div class="container-md">
    <div class="card">
      <div class="card-body">
          <%= render partial: 'locations/location_details', locals: { location: @location } %>
        <div class="d-flex mt-2">
          <div class="flex-grow-1 me-2">
            <%= link_to "Update", edit_location_path(@location), class: "btn btn-primary w-100" %>
          </div>

          <div class="flex-grow-1 me-2">
            <%= link_to "Go Home", locations_path, class: "btn btn-primary w-100" %>
          </div>

          <div class="flex-grow-1">
            <%= link_to "Delete Location", @location, method: :delete,
                                          class: "btn btn-danger w-100",
                                          data: { confirm: "Are you sure you want to delete this location?" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
