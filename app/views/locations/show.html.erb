<div class="container d-flex align-items-center justify-content-center">
  <div class="d-flex flex-column">
    <p style="color: green"><%= notice %></p>

    <%= render @location %>

    <div class="d-flex mt-2">
      <div class="flex-grow-1 me-2">
        <button class="btn btn-light w-100" type="button">
          <%= link_to "Edit", edit_location_path(@location), class: "btn btn-primary w-100" %>
        </button>
      </div>

      <div class="flex-grow-1 me-2">
        <button class="btn btn-light w-100" type="button">
          <%= link_to "Go Back", locations_path, class: "btn btn-primary w-100" %>
        </button>
      </div>

      <div class="flex-grow-1">
        <button class="btn btn-light w-100" type="button">
          <%= link_to "Destroy", @location, method: :delete,
                                    class: "btn btn-danger w-100",
                                    data: { confirm: "Are you sure you want to delete this location?" } %>
        </button>
      </div>
    </div>
  </div>
</div>
